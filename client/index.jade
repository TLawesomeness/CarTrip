doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Car Trip
    link(rel='stylesheet', href='/style.css')
  body
    .container
      h1 Car Trip Calculator
      #inputs
      h3 Trip Distance
      input#distance(type='text' placeholder='Input trip length')
      
      h3 Car MPG
      input#carmpg(type='text' placeholder='Input car mpg')
      
      h3 Car Tank
      input#cartank(type='text' placeholder='Input car total galloon')  
      
      h3 Gas Price per Galloon
      input#gascost(type='text' placeholder='Input gas price')
      
      .row
      button#calculate Calculate
        
    .container
      #outputs
        .stops
        .totalcost
        .gasleft
        .gasneed
            
        
    script(src='/vendor/jquery/dist/jquery.js')
    script(src='/main.js')
